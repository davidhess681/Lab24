
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

@{ 
    ScaffoldingIsCheatingApparently.Models.CoffeeShopDBLab23Entities DB = new ScaffoldingIsCheatingApparently.Models.CoffeeShopDBLab23Entities();
    <table width="50%">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
            <th></th>
        </tr>
        @foreach(ScaffoldingIsCheatingApparently.Models.Item item in DB.Items)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@Html.ActionLink("Edit","Edit",new { id = item.Name })</td>
            <td>@Html.ActionLink("Delete","Delete",new { id = item.Name })</td>
        </tr>
        }
        
    </table>
    <br />
    @Html.ActionLink("Add New Item", "Add", "Home");
}

